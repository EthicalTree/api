.container
  .col-lg-4.col-lg-offset-4.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2.lmt.gmb
    %h3.text-center Hi! Welcome back :)

    .col-sm-12.panel.panel-default.mt
      .col-sm-12.lmt
        = simple_form_for :session do |f|
          = f.input :email, placeholder: 'Enter email...'
          = f.input :password, type: :password, placeholder: 'Enter password...'

          .row.mb.lmt
            .col-sm-6
              = link_to 'Cancel', root_path, class: 'btn btn-block btn-large btn-default'
            .col-sm-6
              = f.submit 'Login', class: 'btn btn-block btn-large btn-primary'

          .row
            .col-xs-12.mb
              %p
                Don't have an account?
                = link_to 'Sign up', signup_path


