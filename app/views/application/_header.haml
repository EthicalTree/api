%nav.navbar.navbar-toggleable-md.navbar-light
  %button.navbar-toggler.navbar-toggler-right{'type': 'button', 'data-toggle': 'collapse', 'data-target': '#nav-menu'}
    %span.navbar-toggler-icon

  = link_to root_path, class: 'navbar-brand mr-auto' do
    %span.sr-only EthicalTree
    = image_tag 'logo/logo.png', class: 'et-logo'

  .collapse.navbar-collapse#nav-menu
    %ul.mr-auto

    %ul.nav.navbar-nav.mr-4.mt-2
      - if logged_in?
        %li.nav-item= link_to 'Logout', logout_path, class: 'nav-link'
      - else
        %li.nav-item= link_to 'Signup', signup_path, class: 'nav-link'
        %li.nav-item= link_to 'Login', login_path, class: 'nav-link'
